<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display Noise Makers</title>
</head>
<body>
    <h1>Noise Makers</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% noiseMakers.forEach((maker, index) => { %>
                <tr>
                    <td><%= maker %></td>
                    <td>
                        <form action="/delete" method="POST" style="display:inline;">
                            <input type="hidden" name="index" value="<%= index %>">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <br>
    
</body>
</html>
